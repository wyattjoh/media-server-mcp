{
  "workspace": [
    "packages/plex",
    "packages/radarr",
    "packages/sonarr",
    "packages/tmdb",
    "packages/media-server-mcp"
  ],
  "tasks": {
    "dev": "deno run --allow-all --watch packages/media-server-mcp/src/index.ts",
    "dev:sse": "deno run --allow-all --watch packages/media-server-mcp/src/index.ts --sse",
    "start": "deno run --allow-all packages/media-server-mcp/src/index.ts",
    "start:sse": "deno run --allow-all packages/media-server-mcp/src/index.ts --sse",
    "build": "deno compile --allow-read --allow-write --allow-env --allow-run --allow-net --output=packages/media-server-mcp/media-server-mcp packages/media-server-mcp/src/index.ts",
    "test": "deno test --allow-net --allow-env",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": "deno check && deno fmt --check && deno lint",
    "hooks:pre-push": "deno publish --dry-run --allow-dirty"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["packages/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
