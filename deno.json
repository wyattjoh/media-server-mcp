{
  "workspace": [
    "packages/radarr",
    "packages/sonarr",
    "packages/tmdb",
    "packages/media-server-mcp"
  ],
  "tasks": {
    "dev": "deno run --allow-all --watch packages/media-server-mcp/src/index.ts",
    "start": "deno run --allow-all packages/media-server-mcp/src/index.ts",
    "build": "deno compile --allow-read --allow-write --allow-env --allow-run --allow-net --output=media-server-mcp packages/media-server-mcp/src/index.ts",
    "test": "deno test --allow-net"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["packages/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
